<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#B39DDB"
    android:orientation="vertical"
    tools:context=".CalculoActivity">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="controla tu pasta"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="45dp" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="#9C27B0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gastos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gastos"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/gastosEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enviar"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="#9C27B0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ingresos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ingresos"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/ingresosEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enviar"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="180dp"
        android:background="#9E617B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ahorro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:freezesText="false"
            android:text="ahorro"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="32dp" />

        <EditText
            android:id="@+id/ahorroEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/enviocantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enviar"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>


</LinearLayout>